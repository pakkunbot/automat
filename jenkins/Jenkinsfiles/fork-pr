pipeline {
    agent {
        label 'docker'
    }
    stages {
        stage('DEBUG') {
            agent {
                docker {
                    image 'cliffano/studio:latest'
                    args '--user root --network host'
                }
            }
            environment {
                PATH = "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
            }
            steps {
                echo 'Hellooooo'
                echo "$PATH"
            }
        }
    }
}
